<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.toutiao.model">
    <!--登陆成功-->
    <select id="loginCase" parameterType="Integer" resultType="com.toutiao.model.LoginCase">
        select * from LoginCase
        where id = #{id};
    </select>
    <!--广场列表-->
    <select id="gcListCase" parameterType="Integer" resultType="com.toutiao.model.GcListCase">
        select  * from GcListCase
        where id = #{id};
    </select>
    <!--预测贴列表-->
    <select id="expListCase" parameterType="Integer" resultType="com.toutiao.model.ExpListCase">
        select * from ExpListCase
        where id =#{id};
    </select>
    <!--关注列表-->
    <select id="bbsLookCase" parameterType="Integer" resultType="com.toutiao.model.BbsLookCase">
        select * from BbsLookCase
        where id=#{id};
    </select>
    <!--论坛/评论-->
    <select id="replyCase" parameterType="Integer" resultType="com.toutiao.model.ReplyCase">
        select * from ReplyCase
        where id_number=#{id_number};
    </select>
    <!--论坛/搜索-->
    <select id="searchCase" parameterType="Integer" resultType="com.toutiao.model.SearchCase">
        select * from SearchCase
        where id=#{id};
    </select>
    <select id="likeCase" parameterType="Integer" resultType="com.toutiao.model.LikeCase">
        select * from LikeCase
        where number_id=#{number_id};
    </select>
</mapper>